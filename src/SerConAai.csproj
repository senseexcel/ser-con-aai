<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <IncludeOpenAPIAnalyzers>true</IncludeOpenAPIAnalyzers>
    <RootNamespace>Ser.ConAai</RootNamespace>
    <Authors>Konrad Mattheis und Martin Berthold</Authors>
    <Copyright>Copyright (c) 2019</Copyright>
    <Company>senseexcel</Company>
    <Configuration>Release</Configuration>
    <Version>$(GitVersion_NuGetVersion)</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="enigma.net" Version="1.0.0" />
    <PackageReference Include="GitVersionTask" Version="5.0.1" PrivateAssets="All" />
    <PackageReference Include="Hjson" Version="3.0.0" />
    <PackageReference Include="Markdig" Version="0.17.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="NLog" Version="4.6.7" />
    <PackageReference Include="PeterKottas.DotNetCore.WindowsService" Version="2.0.11" />
    <PackageReference Include="Portable.BouncyCastle" Version="1.8.5" />
    <PackageReference Include="prometheus-net" Version="3.2.1" />
    <PackageReference Include="prometheus-net.AspNetCore" Version="3.2.1" />
    <PackageReference Include="qlik-engineapi" Version="0.3.0-alpha0015" />
    <PackageReference Include="qlik-sseapi" Version="1.3.1" />
    <PackageReference Include="System.Drawing.Common" Version="4.6.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="5.5.0" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.6.0" />
    <PackageReference Include="YamlDotNet" Version="7.0.0" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(Configuration)' == 'Release'">
      <PropertyGroup>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
      </PropertyGroup>
      <ItemGroup>
        <Reference Include="Ser.Api">
          <HintPath>..\..\ser-api-nuget\src\bin\Release\$(TargetFramework)\SerApi.dll</HintPath>
        </Reference>
        <Reference Include="Q2gHelperPem">
          <HintPath>..\..\q2g-helper-pem-nuget\src\bin\Release\$(TargetFramework)\Q2gHelperPem.dll</HintPath>
        </Reference>
        <Reference Include="Q2gHelperQrs">
          <HintPath>..\..\q2g-helper-qrs-nuget\src\bin\Release\$(TargetFramework)\Q2gHelperQrs.dll</HintPath>
        </Reference>
        <Reference Include="Q2g.HelperQlik">
          <HintPath>..\..\q2g-helper-qlik-nuget\src\bin\Release\$(TargetFramework)\Q2gHelperQlik.dll</HintPath>
        </Reference>
        <Reference Include="Ser.Distribute">
          <HintPath>..\..\ser-distribute-nuget\src\bin\Release\$(TargetFramework)\publish\SerDistribute.dll</HintPath>
        </Reference>
        <Reference Include="Ser.Engine.Rest">
          <HintPath>..\..\ser-engine-rest\src\bin\Release\$(TargetFramework)\publish\SerEngineRest.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
      </PropertyGroup>
      <ItemGroup>
        <Reference Include="Ser.Api">
          <HintPath>..\..\ser-api-nuget\src\bin\Debug\$(TargetFramework)\SerApi.dll</HintPath>
        </Reference>
        <Reference Include="Q2gHelperPem">
          <HintPath>..\..\q2g-helper-pem-nuget\src\bin\Debug\$(TargetFramework)\Q2gHelperPem.dll</HintPath>
        </Reference>
        <Reference Include="Q2gHelperQrs">
          <HintPath>..\..\q2g-helper-qrs-nuget\src\bin\Debug\$(TargetFramework)\Q2gHelperQrs.dll</HintPath>
        </Reference>
        <Reference Include="Q2g.HelperQlik">
          <HintPath>..\..\q2g-helper-qlik-nuget\src\bin\Debug\$(TargetFramework)\Q2gHelperQlik.dll</HintPath>
        </Reference>
        <Reference Include="Ser.Distribute">
          <HintPath>..\..\ser-distribute-nuget\src\bin\Debug\$(TargetFramework)\SerDistribute.dll</HintPath>
        </Reference>
        <Reference Include="Ser.Engine.Rest">
          <HintPath>..\..\ser-engine-rest\src\bin\Debug\$(TargetFramework)\publish\SerEngineRest.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <Compile Remove="Properties\PublishProfiles\**" />
    <EmbeddedResource Remove="Properties\PublishProfiles\**" />
    <None Remove="Properties\PublishProfiles\**" />
  </ItemGroup>

  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="config.hjson.example">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="Properties\PublishProfiles\DebugVersion.pubxml" />
    <None Include="Properties\PublishProfiles\ReleaseVersion.pubxml" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="SE-L">
      <HintPath>..\..\se-l\src\bin\Release\netcoreapp2.2\SE-L.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>